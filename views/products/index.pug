extends ../layouts/common.layout.pug

block content
    h1.pt-5 Products List
    each product in products
        .card(style='width: 18rem')
            .card-body
                img.card-img-top(src= product.image)
                h5.card-title= product.name
                p.card-text= product.description
                a.btn.btn-primary(href='#') Add cart
    nav(aria-label='Page navigation example')
        ul.pagination.justify-content-center
            li.page-item.disabled
            a.page-link(href='#') Start
            li.page-item
            a.page-link(href='/products?page=' + (page-1))= page-1
            li.page-item
            a.page-link(href='/products?page=' + (page))= page
            li.page-item
            a.page-link(href='/products?page=' + (page +1))= page +1
            li.page-item
            a.page-link(href='#') End


            

